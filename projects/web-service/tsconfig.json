{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    //"inlineSourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ],
    "paths": {
      "@hexchess-game-logic/*": [ "../game-logic/src/*" ],
      "@hexchess-tile-generator/*": [ "../tile-generator/src/*" ],
      "@hexchess-utils/*": ["../utils/src/*"]
    }
  },
  "include": [
    "../tile-generator/src/*.ts",
    "src/**/*.ts"
  ]
}