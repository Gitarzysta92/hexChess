{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    //"inlineSourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ],
    "paths": {
      "@hexchess-database/*": [ "../database/src/*" ],
      "@hexchess-game-logic/*": [ "../game-logic/src/*" ],
      "@hexchess-tile-generator/*": [ "../tile-generator/src/*" ],
      "@hexchess-utils/*": [ "../utils/src/*" ]
    }
  },
  "include": [
    "../database/src/*",
    "../game-logic/src/*",
    "../tile-generator/src/*.ts",
    "../utils/src/*",
    "src/**/*.ts"
, "../database/src/constants/account-role.enum.ts"  ]
}